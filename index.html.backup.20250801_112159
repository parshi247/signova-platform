    <style>
        .page-content {
            display: none;
        }
        .page-content.active {
            display: block;
        }
    </style>

    <script>
        // Page navigation functions
        function showHome() {
            hideAllPages();
            document.getElementById('home-content').classList.add('active');
            window.history.pushState({}, '', '/');
        }

        function showSolutions() {
            hideAllPages();
            document.getElementById('solutions-content').classList.add('active');
            window.history.pushState({}, '', '#solutions');
        }

        function showPlatform() {
            hideAllPages();
            document.getElementById('platform-content').classList.add('active');
            window.history.pushState({}, '', '#platform');
        }

        function showSecurity() {
            hideAllPages();
            document.getElementById('security-content').classList.add('active');
            window.history.pushState({}, '', '#security');
        }

        function showPricing() {
            hideAllPages();
            document.getElementById('pricing-content').classList.add('active');
            window.history.pushState({}, '', '#pricing');
        }

        function hideAllPages() {
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.remove('active');
            });
        }

        // Handle navigation clicks
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers to navigation links
            document.querySelector('a[href="#solutions"]').addEventListener('click', function(e) {
                e.preventDefault();
                showSolutions();
            });
            
            document.querySelector('a[href="#platform"]').addEventListener('click', function(e) {
                e.preventDefault();
                showPlatform();
            });
            
            document.querySelector('a[href="#security"]').addEventListener('click', function(e) {
                e.preventDefault();
                showSecurity();
            });
            
            document.querySelector('a[href="#pricing"]').addEventListener('click', function(e) {
                e.preventDefault();
                showPricing();
            });

            // Handle browser back/forward buttons
            window.addEventListener('popstate', function() {
                const hash = window.location.hash;
                switch(hash) {
                    case '#solutions':
                        showSolutions();
                        break;
                    case '#platform':
                        showPlatform();
                        break;
                    case '#security':
                        showSecurity();
                        break;
                    case '#pricing':
                        showPricing();
                        break;
                    default:
                        showHome();
                }
            });

            // Show correct page on load
            const hash = window.location.hash;
            if (hash) {
                switch(hash) {
                    case '#solutions':
                        showSolutions();
                        break;
                    case '#platform':
                        showPlatform();
                        break;
                    case '#security':
                        showSecurity();
                        break;
                    case '#pricing':
                        showPricing();
                        break;
                }
            }
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Mobile menu toggle
        function toggleMenu() {
            const nav = document.getElementById('nav');
            nav.classList.toggle('active');
        }

        // Live metrics animation
        function updateMetrics() {
            const docCount = document.getElementById('docCount');
            const userCount = document.getElementById('userCount');
            
            if (docCount && userCount) {
                const currentDocs = parseInt(docCount.textContent.replace(/,/g, ''));
                const currentUsers = parseInt(userCount.textContent.replace(/,/g, ''));
                
                docCount.textContent = (currentDocs + Math.floor(Math.random() * 5) + 1).toLocaleString();
                userCount.textContent = (currentUsers + Math.floor(Math.random() * 3)).toLocaleString();
            }
        }

        // Update metrics every 3 seconds
        setInterval(updateMetrics, 3000);

        // Loading animations
        function animateOnScroll() {
            const elements = document.querySelectorAll('.loading');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.style.animationDelay = Math.random() * 0.3 + 's';
                }
            });
        }

        window.addEventListener('scroll', animateOnScroll);

        // Trial modal function (placeholder)
        function openTrialModal() {
            // Redirect to payment page for now
            window.open('https://8xhpiqclok6v.manus.space', '_blank');
        }

        // Initialize animations on load
        window.addEventListener('load', () => {
            animateOnScroll();
        });
    </script>
</body>
</html>

